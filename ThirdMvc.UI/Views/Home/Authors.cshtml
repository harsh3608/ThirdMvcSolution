@{
    ViewBag.Title = "User Registration";
}

<!DOCTYPE html>
<html>
<body style="background-color: #ebe9e4;">

    <div class="container border border-dark p-3 mt-4">
        <div class="row d-flex flex-row justify-content-center">
            <h1>User Registration</h1>
        </div>
        <hr />

        <div class="row my-2">
            <div class="col">
                <label>First Name:</label>
                <input class="form-input" />
            </div>

            <div class="col my-2">
                <label>Last Name:</label>
                <input class="form-input" />
            </div>
        </div>

        <div class="row my-2">
            <div class="col">
                <label>Gender</label>
                <select class="form-input">
                    <option default value="">Click to select gender</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="other">Other</option>
                </select>
            </div>
            <div class="col">
                <label>Age:</label>
                <input class="form-input" />
            </div>
        </div>

        <div class="row my-2">
            <div class="col">
                <label>Phone Number:</label>
                <input class="form-input" />
            </div>
            <div class="col my-2">
                <label>Email Address:</label>
                <input class="form-input" />
            </div>
        </div>

        <div class="row">
            <div class="col"></div>
            <div class="col"></div>
        </div>

        <div class="row my-2">
            
            <div class="d-flex justify-content-center">
                <button class="btn btn-primary">Submit</button>
            </div>
            
        </div>

    </div>






</body>

</html>












